<% layout("/layouts/boilerplate") %> 
<body>
    <div class="row">
        <!-- offset se centre me aaya -->
        <div class="col-8 offset-2"><br>
    <h3>Create a New Listing</h3>
    <!-- NOVALIDATE will remove default validation of browser -->
     <!-- enctype is added when we want to send any file to backend -->
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <!-- margin bottom 3 -->
        <div class="mb-3">
        <lable for="title" class="form-label">Title</lable>
        <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control" required>
        <!-- BOOTSTRAP CLASS (valid-feedback) -->
        <div class="valid-feedback">Title Looks Good!</div>
        </div>
        
        <div class="mb-3">
        <lable for="description" class="form-label">Description</lable>
        <textarea name="listing[description]" type="text" class="form-control" required></textarea>
        <div class="invalid-feedback">Please enter a short description</div>
        </div>

        <!-- <div class="mb-3">
        <lable for="image" class="form-label">Image Link</lable>
        <input name="listing[image]" placeholder=" Enter image URL/link" type="text" class="form-control">
        </div> -->
          

        <!-- image upload functionality -->
        <div class="mb-3">
        <lable for="image" class="form-label">Upload Listing Image</lable>
        <input name="listing[image]"  type="file" class="form-control" required>
        </div>

        <div class="mb-3">
        <lable for="price" class="form-label">Price</lable>
        <input name="listing[price]" placeholder="e.g 1200" type="number" class="form-control" required>
        <div class="invalid-feedback">Price should be valid</div>
        </div>
        

        <div class="row">
        <div class="mb-3 col-md-4">
        <lable for="location" class="form-label">Location</lable>
        <input name="listing[location]" placeholder="enter location " type="text" class="form-control" required>
        <div class="invalid-feedback">Location should be valid</div>
        </div>

        <div class="mb-3 col-md-8">
        <lable for="country" class="form-label">Country</lable>
        <input name="listing[country]" placeholder=" enter country" type="text" class="form-control" required>
        <div class="invalid-feedback">Country name should be valid</div>
        </div>
        </div>

        <button class="btn btn-dark add-btn">Add</button><br><BR>
    </form>
    </div>
    </div>
</body>
